# ========================================
# LOTUS SMS - Environment Variables Template
# ========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# ========================================
# DATABASE CONFIGURATION
# ========================================
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=lotus_sms
MYSQL_USERNAME=lotus_user
MYSQL_PASSWORD=change_me_strong_password

# ========================================
# REDIS CONFIGURATION
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ========================================
# JWT SECURITY
# ========================================
# Generate with: openssl rand -hex 32
JWT_SECRET=your_256_bit_secret_key_here_use_openssl_rand_hex_32
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# ========================================
# OAUTH2 - GOOGLE
# ========================================
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ========================================
# OAUTH2 - MICROSOFT
# ========================================
MICROSOFT_CLIENT_ID=your_microsoft_application_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret

# ========================================
# OAUTH2 - LINKEDIN
# ========================================
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# ========================================
# OPENAI API
# ========================================
OPENAI_ENABLED=true
OPENAI_API_KEY=sk-proj-...your_openai_api_key
OPENAI_MODEL=gpt-4-turbo-preview

# Alternative: Azure OpenAI
AZURE_OPENAI_ENABLED=false
AZURE_OPENAI_KEY=your_azure_openai_key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=gpt-4

# ========================================
# EMAIL - SMTP
# ========================================
# Gmail example
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your_app_password

# SendGrid (recommended for production)
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USERNAME=apikey
# SMTP_PASSWORD=your_sendgrid_api_key

EMAIL_FROM=noreply@lotus-sms.com
EMAIL_FROM_NAME=Lotus SMS
EMAIL_SUPPORT=support@lotus-sms.com

# ========================================
# STRIPE BILLING
# ========================================
STRIPE_ENABLED=true
# Test keys (start with sk_test_ and pk_test_)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_CURRENCY=USD

# Product Price IDs (create in Stripe Dashboard)
STRIPE_BASIC_PRICE_ID=price_basic_monthly
STRIPE_PROFESSIONAL_PRICE_ID=price_professional_monthly
STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_monthly

# ========================================
# PAYPAL (Alternative to Stripe)
# ========================================
PAYPAL_ENABLED=false
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# ========================================
# AWS S3 STORAGE
# ========================================
AWS_S3_ENABLED=true
AWS_REGION=us-east-1
AWS_S3_BUCKET=lotus-sms-documents
AWS_ACCESS_KEY_ID=AKIAIOSFODNN7EXAMPLE
AWS_SECRET_ACCESS_KEY=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY

# CloudFront CDN (optional)
AWS_CLOUDFRONT_ENABLED=false
AWS_CLOUDFRONT_DOMAIN=d1234567890.cloudfront.net

# ========================================
# AZURE BLOB STORAGE (Alternative to S3)
# ========================================
AZURE_STORAGE_ENABLED=false
AZURE_STORAGE_ACCOUNT=your_storage_account
AZURE_STORAGE_KEY=your_storage_key
AZURE_STORAGE_CONTAINER=lotus-sms-documents

# ========================================
# FILE STORAGE
# ========================================
FILE_STORAGE_TYPE=s3
# Options: local, s3, azure
FILE_LOCAL_PATH=/var/lotus-sms/uploads

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# ========================================
# PDF GENERATION
# ========================================
PDF_OUTPUT_PATH=/var/lotus-sms/pdf

# ========================================
# CORS
# ========================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://lotus-sms.com

# ========================================
# MULTI-TENANCY
# ========================================
TENANCY_ISOLATION=shared-database
# Options: shared-database, schema-per-tenant, database-per-tenant

# ========================================
# PLUGINS
# ========================================
PLUGINS_DIR=/var/lotus-sms/plugins

# ========================================
# APPLICATION URLs
# ========================================
APP_BASE_URL=http://localhost:8080
APP_FRONTEND_URL=http://localhost:5173

# ========================================
# MONITORING & OBSERVABILITY
# ========================================
# Prometheus
PROMETHEUS_ENABLED=true

# Grafana
GRAFANA_URL=http://localhost:3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Jaeger (Distributed Tracing)
JAEGER_ENABLED=false
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831
JAEGER_SAMPLER_TYPE=probabilistic
JAEGER_SAMPLER_PARAM=0.1

# ELK Stack
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
KIBANA_HOST=localhost
KIBANA_PORT=5601
LOGSTASH_HOST=localhost
LOGSTASH_PORT=5000

# Sentry (Error Tracking)
SENTRY_ENABLED=false
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# ========================================
# ENVIRONMENT
# ========================================
SPRING_PROFILES_ACTIVE=prod
# Options: dev, test, prod

NODE_ENV=production
# Options: development, production

# ========================================
# SECURITY SETTINGS
# ========================================
# Enable/disable features
MFA_ENABLED=true
MFA_REQUIRED_FOR_ADMIN=true
PASSWORD_EXPIRY_DAYS=90
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# ========================================
# DEVELOPMENT ONLY
# ========================================
# (Remove these in production)
DEBUG=false
SPRING_JPA_SHOW_SQL=false
SPRING_JPA_PROPERTIES_HIBERNATE_FORMAT_SQL=false

# ========================================
# BACKUP & RECOVERY
# ========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
# Cron: Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=lotus-sms-backups

# ========================================
# FEATURE FLAGS
# ========================================
FEATURE_ANALYTICS_ENABLED=true
FEATURE_AI_ENABLED=true
FEATURE_MULTI_TENANCY_ENABLED=true
FEATURE_PLUGINS_ENABLED=true

# ========================================
# PERFORMANCE TUNING
# ========================================
ASYNC_ENABLED=true
CACHE_ENABLED=true
COMPRESSION_ENABLED=true

# Database connection pool
HIKARI_MAXIMUM_POOL_SIZE=50
HIKARI_MINIMUM_IDLE=10
HIKARI_CONNECTION_TIMEOUT=30000
HIKARI_IDLE_TIMEOUT=600000
HIKARI_MAX_LIFETIME=1800000

# Redis connection pool
REDIS_LETTUCE_POOL_MAX_ACTIVE=16
REDIS_LETTUCE_POOL_MAX_IDLE=8
REDIS_LETTUCE_POOL_MIN_IDLE=2

# ========================================
# END OF CONFIGURATION
# ========================================

# Quick Setup Instructions:
# 1. Copy this file: cp .env.example .env
# 2. Fill in your actual credentials
# 3. Generate JWT secret: openssl rand -hex 32
# 4. Never commit .env to git (it's in .gitignore)
# 5. Use different values for dev/staging/production

# For Docker:
# - Load with: docker-compose --env-file .env up
# - Or use Docker secrets for production

# For Kubernetes:
# - Create ConfigMap: kubectl create configmap lotus-config --from-env-file=.env
# - Create Secret: kubectl create secret generic lotus-secrets --from-env-file=.env
